<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lblListItem"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:text="loading..."
        android:padding="5dp"
        android:layout_marginLeft="15dp"
        android:textSize="15sp"
        android:textStyle="normal|bold" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lblListItem"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/price_tv"
        android:layout_marginRight="10dp"
        android:paddingLeft="5dp"
        android:paddingBottom="5dp"
        android:layout_marginLeft="15dp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/price_tv"
        android:layout_toRightOf="@+id/price_tv"
        android:layout_toEndOf="@+id/price_tv"
        android:id="@+id/qty_tv"
        android:paddingBottom="5dp"
        android:paddingTop="5dp" />

    <TextView
        android:text="Isle:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/isle_tv"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_alignBaseline="@+id/qty_tv"
        android:layout_alignBottom="@+id/qty_tv"
        android:layout_toRightOf="@+id/qty_tv"
        android:layout_toEndOf="@+id/qty_tv" />
</RelativeLayout>