<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lblListItem"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:text="loading..."
        android:padding="5dp"
        android:layout_marginLeft="15dp"
        android:textSize="15sp"
        android:textStyle="normal|bold" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/price_tv"
        android:paddingLeft="5dp"
        android:paddingBottom="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:layout_alignTop="@+id/lblListItem"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textStyle="normal|bold"
        android:textColor="@android:color/holo_green_dark" />


    <TextView
        android:text="Isle:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/isle_tv"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_below="@+id/lblListItem"
        android:layout_alignLeft="@+id/lblListItem"
        android:layout_alignStart="@+id/lblListItem"
        android:layout_marginLeft="10dp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/qty_tv"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:layout_below="@+id/lblListItem"
        android:layout_toRightOf="@+id/isle_tv"
        android:layout_toEndOf="@+id/isle_tv"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:drawable/ic_input_add"
        android:layout_below="@+id/price_tv"
        android:layout_alignRight="@+id/price_tv"
        android:layout_alignEnd="@+id/price_tv"
        android:id="@+id/increaseQty" />


</RelativeLayout>